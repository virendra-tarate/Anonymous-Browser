<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/data_bg"
    tools:context=".info_activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading"
        android:text="Anonymous Browser"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#E600FF"
        android:textStyle="bold"
        android:paddingTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/l1"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/img22"
            android:src="@drawable/anonymous_browser_removebg_img"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/credits">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:paddingBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© All Rights Reserved"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Created By Tarate Virendra"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingBottom="5dp"/>
    </LinearLayout>

</LinearLayout>